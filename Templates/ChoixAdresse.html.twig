    <form
      action="AdresseController.php"
      method="post"
      id="form"
    >
    <div class="d-flex justify-content-around flex-wrap">
    {% if data is empty %}
    <label class="labl">
        <input
          type="radio"
          name="radioname"
          value="AdresseDeCompte"
          disabled
        />
        <div class="d-flex align-items-center justify-content-center rounded-3 border m-3 p-3">
    <a href="LoginController.php" class="btn btn-dark text-warning m-2">
        Login
    </a><br>
    <a class="btn btn-warning m-2" href="SignupController.php">Sign-up</a>
    {% else %}
    <label class="labl">
        <input
          type="radio"
          name="radioname"
          value="AdresseDeCompte"
        />
        <div class="align-items-center rounded-3 border m-3 p-3">
          <h5 class="display-7 fw-bold lh-1 text-body-emphasis mb-3">
            Adresse de compte
          </h5>
          <div class="row">
          <div class="col">
          <label for="nom">Nom</label>
              <input type="text" class="form-control my-2" id="nom" name="Nom" value="{{data.nom}}" disabled >
          </div>
          <div class="col">
          <label for="Prenom">Prenom</label>
              <input type="text" id="Prenom" class="form-control my-2" name="Prenom" value="{{data.prenom}}" disabled>
          </div>
        </div>
          <div class="form-group">
            <label for="email">Adresse mail</label>
            <input type="email" class="form-control mb-2" id="email" name="Email"  value="{{data.email}}" disabled/>
          </div>
          <div class="form-group">
            <label for="phone">Téléphone</label>
            <input type="text" class="form-control mb-2" id="phone" name="Tel"  value="{{data.phone}}" disabled/>
          </div>
          <div class="form-group">
            <label for="adresse1">Adresse 1</label>
            <input
              type="text"
              class="form-control mb-2"
              id="adresse1"
              value="{{ data.adresse1 }}"
              disabled
            />
          </div>
          <div class="form-group">
            <label for="adresse2">Adresse 2</label>
            <input
              type="text"
              class="form-control mb-2"
              id="adresse2"
              value="{{ data.adresse2 }}"
              disabled
            />
          </div>
          <div class="form-group">
            <label for="adresse3">Adresse 3</label>
            <input
              type="text"
              class="form-control mb-2"
              id="adresse3"
              value="{{ data.adresse3 }}"
              disabled
            />
          </div>
          <div class="form-group">
            <label for="adressePostale">Adresse Postale</label>
            <input
              type="text"
              class="form-control mb-2"
              id="adressePostale"
              value="{{ data.adressePostale }}"
              disabled
            />
          </div>
        
      {% endif %}
      </div>
      </label>
      <label class="labl">
        <input type="radio" name="radioname" value="NouvelleAdresse" checked="checked"/>
        <div class="align-items-center rounded-3 border m-3 p-3">
          <h5 class="display-7 fw-bold lh-1 text-body-emphasis mb-3">
            Nouvelle adresse
          </h5>
          <div class="row">
          <div class="col">
          <label for="nom">Nom</label>
              <input type="text" class="form-control my-2" id="nom" name="NouveauNom"  pattern="^[A-Za-z]{2,}$"
                     oninvalid="this.setCustomValidity('Le nom doit être constituer que par des lettres et qu il ait au moins 2 caractères')"
                     oninput="this.setCustomValidity('')">
          </div>
          <div class="col">
          <label for="Prenom">Prenom</label>
              <input type="text" id="Prenom" class="form-control my-2" name="NouveauPrenom"  pattern="^[A-Za-z]{2,}$"
                     oninvalid="this.setCustomValidity('Le prénom doit être constituer que par des lettres et qu il ait au moins 2 caractères')"
                     oninput="this.setCustomValidity('')">
          </div>
        </div>
          <div class="form-group">
            <label for="email">Adresse mail</label>
            <input type="email" class="form-control mb-2" id="email" name="NouveauEmail"/>
          </div>
          <div class="form-group">
            <label for="phone">Téléphone</label>
            <input type="text" class="form-control mb-2" id="phone" name="NouveauTel" pattern="[0-9]{3}[0-9]{3}[0-9]{4}"
                 oninvalid="this.setCustomValidity('Marquez un numéro de téléphone valide')"
                 oninput="this.setCustomValidity('')"/>
          </div>
          <div class="form-group">
            <label for="adresse1">Adresse 1</label>
            <input type="text" class="form-control mb-2" id="adresse1" name="NouvelleAdresse1" pattern="^[A-Za-z0-9]+$"/>
          </div>
          <div class="form-group">
            <label for="adresse2">Adresse 2 <i class="opacity-50">(Optionnelle)</i></label>
            <input type="text" class="form-control mb-2" id="adresse2" name="NouvelleAdresse2" pattern="^[A-Za-z0-9]+$"/>
          </div>
          <div class="form-group">
            <label for="adresse3">Adresse 3</label>
            <input type="text" class="form-control mb-2" id="adresse3" name="NouvelleAdresse3" pattern="^[A-Za-z0-9]+$"/>
          </div>
          <div class="form-group">
            <label for="adressePostale">Adresse Postale</label>
            <input
              type="text"
              class="form-control mb-2"
              id="adressePostale"
              name="NouvelleAdressePostale"
              pattern="[0-9]{5}"
              oninvalid="this.setCustomValidity('Marquez un numéro code postale valide')"
              oninput="this.setCustomValidity('')"
            />
          </div>
        </div>
      </label>
      </div>
